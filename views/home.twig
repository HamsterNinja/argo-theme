{% include "partials/header.twig" %}
<main class='main-content'>
<div class="main-slider">
	<div class="main-slick">
		<div class="main-slick-content">
			<img src="{{ site.theme.link }}/assets/images/slide.jpg" alt="">
		</div>
	</div>
</div>
<div class="main-page-tiggers">
	<div class="container">
		<div class="main-page-trigger">
			<div class="main-page-trigger-img"><img src="{{ site.theme.link }}/assets/images/trigger-1.png" alt=""></div>
			<div class="main-page-trigger-text">Самые вкусные хинкали в городе</div>
		</div>
		<div class="main-page-trigger">
			<div class="main-page-trigger-img"><img src="{{ site.theme.link }}/assets/images/trigger-2.png" alt=""></div>
			<div class="main-page-trigger-text">Готовим шашлык из самого свежего мяса</div>
		</div>
		<div class="main-page-trigger">
			<div class="main-page-trigger-img"><img src="{{ site.theme.link }}/assets/images/trigger-3.png" alt=""></div>
			<div class="main-page-trigger-text">А еще у нас выпечка вкусная</div>
		</div>
	</div>
</div>

{% if activities is not empty  %}
<div class="activity-block">
	<div class="container">
		<div class="main-page-title">Мероприятия</div>
		<div class="activity-block-slick">
			{% for activity in activities %}			
				<div class="activity-item">
					{% if activity.thumbnail %}
						<img src="{{ activity.thumbnail.src|resize(363, 547) }}" alt="{{ activity.title }}">
					{% else %}
						<img class="" src="{{ site.theme.link }}/assets/images/placeholder-images.webp" alt="">
					{% endif %}
					<div class="activity-hidden-block">
						<div class="activity-hidden-block-title">{{ activity.title }}</div>
						<!-- TODO: удалить неразравные пробелы -->
						<div class="activity-hidden-block-text">{{ activity.preview.length(50).read_more('') }}</div>
					</div>
				</div>
			{% endfor %}	
		</div>
	</div>
</div>
{% endif %}

