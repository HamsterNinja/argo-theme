{% include "partials/header.twig" %}
<main class='main-content page'>
    <div class="page-header">
        <div class="container">
            
            <div class="all-page-title">
				<h1>Контакты</h1>
				{{ function('woocommerce_breadcrumb') }}
            </div>
        </div>
    </div>
    <div class="contacts-content">
		<div class="new-block-fone-white pad-50">
        <div class="contacts-content-top">
        	<div class="container">
        		<div class="contacts-content-top-item">
        			<div class="contacts-content-top-item-name">Время работы ресторана:</div>
        			<div class="contacts-content-top-item-value">РЕСТОРАН: С 9.00 ДО 00.00 ЕЖЕДНЕВНО</div>
        		</div>
        		<div class="contacts-content-top-item">
        			<div class="contacts-content-top-item-name">Время работы доставки:</div>
        			<div class="contacts-content-top-item-value">С 09.00 ДО 23.00</div>
        		</div>
        		<div class="contacts-content-top-item">
        			<div class="contacts-content-top-item-name">Адрес:</div>
        			<div class="contacts-content-top-item-value">Ликино-Дулево, ул. Калинина, 5</div>
        		</div>
        	</div>
        </div>
        <div class="contacts-content-bottom">
        	<div class="container">
        		<div class="contacts-content-bottom-info">
        			<div class="contacts-content-bottom-info-item">
        				<div class="contacts-info-item-name">Социальные сети</div>
        				<div class="contacts-info-item-socials">
							
							{% if vk %}
								<div class="social-item">
									<div class="social-item-name">Вконтакте:</div>
									<div class="social-item-link">
										<a target="_blank" rel="noopener" href="{{ vk }}">
