{% include "partials/header.twig" %}
<main class='main-content page'>
    <div class="page-header">
        <div class="container">
           
            <div class="all-page-title">
                <h1>ФОТОАРХИВ</h1>
                {{ function('woocommerce_breadcrumb') }}
            </div>
        </div>
    </div>
    <div class="new-block-fone-white pad-50">
        <div class="container">
            {% if posts is not empty  %}
				{% for post in posts %}
                    <a class="photo-gallery-item" href="{{ post.link }}">
                        <div class="photo-gallery-image">
                            {% if post.thumbnail %}
                                <img src="{{ post.thumbnail.src('medium_large') }}" alt="{{ post.title }}">
                            {% else %}
                                <img class="" src="{{ site.theme.link }}/assets/images/placeholder-images.webp" alt="">
                            {% endif %}
                        </div>
                        <div class="photo-gallery-name">{{ post.title }}</div>
                    </a>
				{% endfor %}
			{% else %}
				<div class="not-content">Категория пуста</div>
			{% endif %}
        </div>
    </div>
</main>
{% include "partials/footer.twig" %}