{% include "partials/header.twig" %}
<main class='main-content page cart' id="app">
    <div class="page-header">
        <div class="container">
            <div class="cart-steps">
                <div class="cart-step active">Корзина</div>
                <span class="next-step"><img src="./assets/images/arrow-r.svg" alt=""></span>
                <div class="cart-step">Оформление заказа</div>
                <span class="next-step"><img src="./assets/images/arrow-r.svg" alt=""></span>
                <div class="cart-step">Заказ оформлен</div>
            </div>
        </div>
    </div>
    <div class="page_cart-content">
        <div class="container">
            <form action="">
            <div class="cart-left">
            <div class="cart-table">
                <table>
                    <tr>
                        <td>Товар</td>
                        <td>Цена</td>
                        <td>Количество</td>
                        <td>Итого</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>
                            <img class="cart-product-img" src="./assets/images/menu_del.png" alt="">
                            <p class="cart-product-name">Хинкали с бараниной</p>
                        </td>
                        <td>100 р.</td>
                        <td>
                            <div class="person-quantity">
                                <button onclick="$(this).next()[0].stepDown();">
                                    <svg width="14" height="2" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0 1h13.5" stroke="#000"/></svg>
                                </button>
                                <input type="number" min="1" value="1" class="inputNumber">
                                <button onclick="$(this).prev()[0].stepUp();">
                                    <svg width="14" height="14" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0 7h13.5M7 0v13.5" stroke="#000"/></svg>
                                </button>
                            </div>
                        </td>
                        <td>100 р.</td>
                        <td><a class="delete-product" href=""><img src="./assets/images/close.svg" alt=""></a></td>
                    </tr>
                </table>
            </div>
            button.
            </div>
            </form>
        </div>
    </div>
</main>
{% include "partials/footer.twig" %}